<UserControl x:Class="IFCTerrainGUI.GUI.ExportSettings.ucIfcVersionShape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IFCTerrainGUI.GUI.ExportSettings"
             xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="95" d:DesignWidth="385">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <GroupBox
            Header="IFC Version">
            
            <!-- stack panel -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ComboBox x:Name="cbIfcVersion" Width="100" VerticalAlignment="Center" SelectionChanged="cbIfcVersion_SelectionChanged" ToolTip="Please select IFC schema version. The supported functionalities differ!">
                    <!--default seeting GCS-->
                    <ComboBoxItem x:Name="ifc2x3" Content="IFC 2x3"/>
                    <ComboBoxItem x:Name="ifc4" Content="IFC 4"/>
                    <ComboBoxItem x:Name="ifc4dot3" Content="IFC 4.3" IsEnabled="False"/>
                </ComboBox>
                <CheckBox x:Name="chkIfcGeoEl" VerticalAlignment="Center" VerticalContentAlignment="Bottom" Content="IfcGeographicalElement" Margin="7,0,0,0" IsEnabled="False" ToolTip="Only available under version Ifc 4!" ToolTipService.ShowOnDisabled="True" Checked="chkIfcGeoEl_Checked" Unchecked="chkIfcGeoEl_Unchecked"/>
            </StackPanel>

        </GroupBox>

        <GroupBox 
            Grid.Row="1"
            Header="IFC Shape Representation"
            >

            <StackPanel VerticalAlignment="Center" Grid.Column="1" Orientation="Horizontal">
                <ComboBox x:Name="cbShapeRepres" Width="200" SelectionChanged="cbShapeRepres_SelectionChanged" ToolTip="Please select one of the supported shape representations. &#x0a;Keep in mind: not all software can handle all shape representations.">
                    <!--default seeting GCS-->
                    <ComboBoxItem x:Name="ifcGCS" Content="IfcGeometricCurveSet"/>
                    <ComboBoxItem x:Name="ifcSBSM" Content="IfcShellBasedSurfaceModell"/>
                    <ComboBoxItem x:Name="ifcTFS" Content="IfcTriangulatedFaceSet" IsEnabled="False"/>
                    <ComboBoxItem x:Name="ifcTIN" Content="IfcTriangulatedIrregularNetwork" IsEnabled="False"/>
                </ComboBox>

                <TextBlock Text="Min. distance:" Margin="5,0,0,0" VerticalAlignment="Center"/>
                <TextBox x:Name="tbMinDist" x:FieldModifier="public" Width="30" Margin="5,0,0,0" VerticalAlignment="Center" Text="{Binding Path=MinDistInput}" PreviewTextInput="NumberValidationTextBox" IsEnabled="False" ToolTip="[Currently not available!] Outlook: thinning out meshes" ToolTipService.ShowOnDisabled="True"/>

                <TextBlock Text="[m]" Margin="5,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </GroupBox>
            
    </Grid>
</UserControl>
